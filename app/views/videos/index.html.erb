<%= render template: 'shared/navbar' %>

<div class="row">
  <div class="col-sm-4">
    <h1>VIDEO INDEX</h1>
  </div>
  <div class="col-sm-6">
    <%= render 'search_form' %> 
  </div>
  <div class="col-sm-2">
    <%= link_to "Add New", new_video_path, class: 'btn btn-secondary add-new-video-btn' if signed_in_admin? %>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <h2>Latest</h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="row">
    <% @newest_videos.each do |video| %>
      <%= render partial: 'shared/text_box', locals: { article: video } %>
    <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <h2>Previous</h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="row">
    <% @videos.each do |video| %>
      <%= render partial: 'shared/text_box', locals: { article: video } %>
    <% end %>
    </div>
  </div>
</div>
