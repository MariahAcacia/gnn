<%= render template: 'shared/navbar' %>
<div class="index-wrapper">
  <div class="row">
    <div class="col-sm-4">
      <h1>Video Search Index</h1>
    </div>
    <div class="col-sm-6">
      <%= render 'search_form' %>
    </div>
    <div class="col-sm-2">
      <%= link_to "Back", videos_path %>
      <%= link_to "Add New", new_video_path, class: 'btn btn-secondary' if signed_in_admin? %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <div class="row">
      <% @videos.each do |video| %>
        <%= render partial: 'texts/text_box', locals: { article: video } %>
      <% end %>
      </div>
    </div>
  </div>
</div>
