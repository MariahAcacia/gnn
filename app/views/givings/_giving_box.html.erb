<div class="col-sm-3">
  <%= link_to(article.url, target: :_blank) do %>
    <p class="headline-text"><%= article.company_name unless nil %></p>
    <p class="headline-text"><%= article.name unless nil %></p>
    <% if article.photo.blank? %>
      <img src="<%= asset_path('pink.jpg')%>" class="photo-style"/>
    <% else %>
      <%= article.photo %>
    <% end %>
    <p><%= article.blurb %></p>
    <%= render partial: "shared/action_buttons", locals: { article: article } %>
  <% end %>
</div>
