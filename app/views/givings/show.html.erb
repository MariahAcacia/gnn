<%= render template: "shared/navbar" %>

<div class="row show-wrapper">
  <div class="col-sm-10 offset-sm-1">
    <div class="row">
      <div class="col-sm-6 offset-sm-1">
        <h1><%= @giving.company_name %></h1>
        <h1><%= @giving.name %></h1>
      </div>
      <div class="col-sm-4">
        <div class="photo-wrapper" style="height: 200px; width: 200px; background-color: gray; margin: 5px;">
          <%= @giving.photo if @giving.photo %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        <%= @giving.blurb %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        <%= @giving.description %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        <%= @giving.twitter %>
        <%= @giving.instagram %>
        <%= @giving.facebook %>
        <%= @giving.email %>
      </div>
    </div>
  </div>
</div>
