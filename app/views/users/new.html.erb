
<div class="row justify-content-center">
  <h1>New User Sign Up!</h1>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= form_for @user do |u| %>
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <%= u.label :first_name %>
          <p class="error-msg"><%= display_form_errors(@user, :first_name) %></p>
          <%= u.text_field :first_name, class: 'form-control form-control-lg'  %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <%= u.label :last_name %>
          <p class="error-msg"><%= display_form_errors(@user, :last_name) %></p>
          <%= u.text_field :last_name, class: 'form-control form-control-lg' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <%= u.label :email %>
          <p class="error-msg"><%= display_form_errors(@user, :email) %></p>
          <%= u.text_field :email, class: 'form-control form-control-lg' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <%= u.label :password %>
          <p class="error-msg"><%= display_form_errors(@user, :password) %></p>
          <%= u.password_field :password, class: 'form-control form-control-lg' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <%= u.label :password_confirmation %>
          <p class="error-msg"><%= display_form_errors(@user, :password_confirmation) %></p>
          <%= u.password_field :password_confirmation, class: 'form-control form-control-lg'%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <%= u.submit "Create User", class: 'form-control form-control-lg'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
