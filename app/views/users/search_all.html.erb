<%= render template: 'shared/navbar' %>

<div class="row">
  <div class="col-sm-7 offset-sm-1">
    <h1>Search All Results</h1>
  </div>
  <div class="col-sm-4">
    <%= render partial: 'shared/search_all_form' %>
  </div>
</div>

<div class="article-section">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h1>Text (<%= @texts.count %>)</h1>
      <% if @texts.empty? %>
        <p>No articles match search query</p>
      <% end %>
      <div class="row">
        <% @texts.each do |text| %>
          <%= render partial: 'shared/text_box', locals: { article: text } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

