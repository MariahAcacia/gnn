<%= render template: 'shared/navbar' %>

<div class="article-section">
  <div class="row">
    <div class="col-sm-7 offset-sm-1">
      <h1><%= link_to "Read", texts_path, class: 'texts-link' %></h1>
    </div>
    <div class="col-sm-3 justify-content-right">
      <%= link_to "Add New", new_text_path, class: 'btn btn-secondary add-new-text-btn' if signed_in_admin? %>
      <%= render partial: 'shared/search_all_form' if !signed_in_admin? %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <div class="row text-area">
          <%= render partial: 'texts/text_box', collection: @texts, as: :article %>
      </div>
    </div>
  </div>
</div>
