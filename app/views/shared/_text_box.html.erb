<div class="col-sm-3">
  <%= link_to(article.url) do %>
    <p>Headline: <%= article.headline %></p>
    <div style="width: 200px; height: 200px; background-color:gray;">
      <%= article.photo unless nil %>
    </div>
    <p>Blurb: <%= article.blurb %></p>
    <%= render partial: "shared/action_buttons", locals: { article: article } %> 
  <% end %>
</div>
