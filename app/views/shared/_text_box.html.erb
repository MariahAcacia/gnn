<div class="col-sm-3">
  <%= link_to(text.url) do %>
    <p>Headline: <%= text.headline %></p>
    <div style="width: 200px; height: 200px; background-color:gray;">
      <%= text.photo unless nil %>
    </div>
    <p>Blurb: <%= text.blurb %></p>
    <%= link_to "Let's Discuss", text_path(text), class: 'btn btn-secondary btn-sm' if signed_in_user? %>
    <%= link_to "Save", "#", class: 'btn btn-secondary btn-sm' if signed_in_user? %>
    <%= link_to "Edit", edit_text_path(text), class: 'btn btn-secondary btn-sm edit-btn' if signed_in_admin? %>
    <%= link_to "Delete", text_path(text), method: "DELETE", class: 'btn btn-secondary btn-sm', data: { confirm: "Are you sure you want to delete this article? This action cannot be undone." } %>
  <% end %>
</div>
