<% if signed_in_user? %>
  <%= render partial: 'shared/save_unsave', locals: { article: article } unless current_user.admin == true %>
<% end %>
<% if signed_in_admin? %>
  <%= link_to "Edit", edit_polymorphic_path(article), class: 'btn btn-secondary btn-sm edit-btn' %>
  <%= link_to "Delete", polymorphic_path(article), method: "DELETE", class: 'btn btn-secondary btn-sm delete-btn', data: { confirm: "Are you sure you want to delete this article? This action cannot be undone." } %>
<% end %>
<% if article.class == Giving || article.class == Spotlight %>
  <%= link_to "Read More About...", polymorphic_path(article), class: 'btn btn-secondary btn-sm show-btn' if article.description %>
<% end %>
