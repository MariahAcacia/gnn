<%= render template: 'shared/navbar' %>

<div class="row index-wrapper">
  <div class="col-sm-4">
    <h2><%= article.upcase %> INDEX</h2>
  </div>
  <div class="col-sm-6">
    <%= render 'search_form' %>
  </div>
  <div class="col-sm-2">
    <%= link_to "Add New", new_polymorphic_path(article), class: 'btn btn-secondary' if signed_in_admin? %>
  </div>
</div>

<div class="article-section">
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <h2>Latest</h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="row">
    <% newest_articles.each do |a| %>
      <%= render partial: "#{article}s/#{article}_box", locals: { article: a } %>
    <% end %>
    </div>
  </div>
</div>
</div>
<div class="article-section">
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <h2>Previous</h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="row">
    <% articles.each do |a| %>
      <%= render partial: "#{article}s/#{article}_box", locals: { article: a } %>
    <% end %>
    </div>
  </div>
</div>
