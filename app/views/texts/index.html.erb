<%= render template: 'shared/navbar' %>

<div class="row">
  <div class="col-sm-10">
    <h1>TEXT INDEX</h1>
  </div>
  <div class="col-sm-2">
    <%= link_to "Add New", new_text_path, class: 'btn btn-secondary' if signed_in_admin? %>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <h2>Lastest</h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="row">
    <% @latest_texts.each do |text| %>
      <%= render partial: 'text_box', locals: { text: text } %>
    <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <h2>Previous</h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="row">
    <% @texts.each do |text| %>
      <%= render partial: 'text_box', locals: { text: text } %>
    <% end %>
    </div>
  </div>
</div>
