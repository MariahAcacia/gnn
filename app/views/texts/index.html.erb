<%= render template: 'shared/navbar' %>

<div class="row">
  <div class="col-sm-10">
    <h1>TEXT INDEX</h1>
  </div>
  <div class="col-sm-2">
    <%= link_to "Add New", new_text_path, class: 'btn btn-secondary' if signed_in_admin? %>
  </div>
</div>

<div class="row">
  <h2>Lastest</h2>
</div>
<div class="row">
  <% @lastest_texts.each do |t| if @lastest_texts %>
    <div class="col-sm-3">
      <h1><%= t.headline %></h1>
    </div>
  <% end %>
</div>

<div class="row">
  <h2>Previous</h2>
</div>
<% @texts.each do |t| if @texts %>
<% end %>
