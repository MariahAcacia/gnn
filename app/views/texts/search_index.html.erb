<%= render template: 'shared/navbar' %>

<div class="row">
  <div class="col-sm-4">
    <h1>Text Search Index</h1>
  </div>
  <div class="col-sm-6">
    <%= render 'search_form' %> 
  </div>
  <div class="col-sm-2">
    <%= link_to "Back", texts_path %>
    <%= link_to "Add New", new_text_path, class: 'btn btn-secondary' if signed_in_admin? %>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="row">
    <% @texts.each do |text| %>
      <%= render partial: 'shared/text_box', locals: { article: text } %>
    <% end %>
    </div>
  </div>
</div>
