<%= render template: "shared/navbar" %>

<div class="row justify-content-center">
  <h1>Spotlight</h1>
</div>

<div class="row">
  <div class="col-sm-10 offset-sm-1 show-wrapper">
    <div class="row">
      <div class="col-sm-6 offset-sm-1">
        <h1><%= @spotlight.company_name %></h1>
        <h1><%= @spotlight.name %></h1>
      </div>
      <div class="col-sm-4">
        <div class="photo-wrapper" style="height: 200px; width: 200px; background-color: gray; margin: 5px;">
          <%= @spotlight.photo if @spotlight.photo %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        <%= @spotlight.blurb %>
      </div>
    </div>
    <div class="row description-div">
      <div class="col-sm-10 offset-sm-1">
        <%= @spotlight.description %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        <%= render partial: 'shared/social_btns', locals: { twitter: @spotlight.twitter,
                                                            instagram: @spotlight.instagram,
                                                            facebook: @spotlight.facebook,
                                                            email: @spotlight.email } %>
      </div>
    </div>
  </div>
</div>
