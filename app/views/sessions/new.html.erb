<div class="dropdown">
  <%= link_to "Sign In", "#", class: "dropdown-toggle", title: '', data: { toggle: 'dropdown', 'aria-haspopup': 'true', 'aria-expanded': 'false' } %>
  <%= form_tag(session_path, { class: "dropdown-menu p-4" }) do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag do %>
        Confirm Password
        <%= password_field_tag :password_confirmation, "", class: "form-control" %>
      <% end %>
    </div>
    <div class="form-group">
      <div class="form-check">
        <%= check_box_tag :remember_me %>
        <%= label_tag :remember_me %>
      </div>
    </div>
    <%= submit_tag "Sign In", class: "btn btn-primary" %>
  <% end %>
</div>
